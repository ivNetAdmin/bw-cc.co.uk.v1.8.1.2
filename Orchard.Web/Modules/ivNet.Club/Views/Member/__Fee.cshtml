<div class="form-group">
    <span class="col-md-2 control-label text-right">Fee:</span>
    <div class="col-md-2">
        <input id="PaidDate" name="PaidDate" type="date" placeholder="Paid" class="form-control input-md" required="">
    </div>
    <div class="col-md-3">
        <select id="Season" name="Season" class="form-control" required="">
            <option value="2014">2014</option>
            <option value="2014">2015</option>
        </select>
    </div>       
    <div class="col-md-3">
        <input id="Amount" name="Amount" type="number" placeholder="Amount" required=""  class="form-control input-md">
    </div>        
    <div class="col-md-2">
        <select id="FeeType" name="FeeType" class="form-control" required="">
            <option value="1">Option one</option>
            <option value="2">Option two</option>
        </select>
    </div>
</div>
<div class="form-group">
    <span class="col-md-2 text-right">Fee Note:</span>
    <div class="col-md-10">
        <textarea class="form-control" id="FeeNotes" name="FeeNotes" placeholder="Notes"></textarea>        
    </div>
</div>
