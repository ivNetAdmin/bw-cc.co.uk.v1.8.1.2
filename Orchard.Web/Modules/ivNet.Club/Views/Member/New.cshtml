@{
    Script.Require("AngularJS-UI");
    Script.Require("Club.New.Member");    
    
    Style.Require("Club.New.Member");
}
<div id="NewMember" data-ng-app="ivNet.New.Member.App">
    <div data-ng-controller="NewMemberController">        
        @using (Html.BeginFormAntiForgeryPost(Url.Action("New", "Member", new { area = "ivNet.Club" }), FormMethod.Post, new { @class = "form-horizontal", id = "newMemberForm" }))
        {
            <fieldset>
                @Html.Partial("_Instruction")
                @Html.Partial("_RegistrationType")

                @Html.Partial("_GuardianCount")
                @Html.Partial("_Member")

                @Html.Partial("_JuniorCount")
                @Html.Partial("_Junior")

                @Html.Partial("_Other")

                @Html.Partial("_Button")
            </fieldset>
        }
    </div>
</div>
