@{
    Script.Require("AngularJS-UI");
    Script.Require("AngularJS-Resource");
    Script.Require("Club.Member.Registration.Details");

    Style.Require("Club.New.Member");
}

<div data-ng-app="ivNet.Member.Registration.Details.App">
    <div data-ng-controller="MemberRegistrationDetailsController">

        <form angular-validator
              angular-validator-submit="" ng-submit="saveChanges()">

            <div class="form-group">
                <input type="button" value="Add Gaurdian" class="btn btn-info" ng-click="addGuardian()" />
                <input type="button" value="Cancel" class="btn btn-warning" ng-click="cancelGuardian()" />
            </div>
            @Html.Partial("_Shared/_GuardianDetails")
            @Html.Partial("_Shared/_GuardianRepeatDetails")
            <div class="form-group">
                <input type="button" value="Add Junior" class="btn btn-info" ng-click="addJunior()" />
                <input type="button" value="Cancel" class="btn btn-warning" ng-click="cancelJunior()" />
            </div>
            @Html.Partial("_Shared/_JuniorDetails")
            @Html.Partial("_Shared/_JuniorRepeatDetails")
            <div class="form-group">
                <input id="singlebutton" type="submit" value="Save Changes" class="btn btn-success" />
                <input type="button" value="Cancel Changes" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>


