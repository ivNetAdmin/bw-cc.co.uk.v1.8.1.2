@{
    Script.Require("AngularJS-UI");    
    Script.Require("Membership.New.Registration");

    Style.Require("Membership.New.Registration");
}
<div id="NewMember" data-ng-app="Membership.New.Registration.App" class="col-md-12">
    <div data-ng-controller="MembershipNewRegistrationController">
        @using (Html.BeginFormAntiForgeryPost(Url.Action("NewRegistration", "Site", new { area = "ivNet.Club" }), FormMethod.Post, new { @class = "form-horizontal", id = "newMemberForm" }))
        {
            <fieldset>
                @Html.Partial("Membership/NewRegistration/_Instruction")
                @Html.Partial("Membership/NewRegistration/_RegistrationType")

                @Html.Partial("Membership/NewRegistration/_GuardianCount")
                @Html.Partial("Membership/NewRegistration/_Member")

                @Html.Partial("Membership/NewRegistration/_JuniorCount")
                @Html.Partial("Membership/NewRegistration/_Junior")

                @Html.Partial("Membership/NewRegistration/_Other")

                @Html.Partial("Membership/NewRegistration/_Button")
            </fieldset>
        }
    </div>
</div>

