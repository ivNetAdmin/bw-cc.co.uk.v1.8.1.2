<div id="guardianDetails" class="memberDetails">
    <div class="form-group">
        Guardian: <strong>{{guardian.Firstname}} {{guardian.Surname}}</strong>
    </div>

    <div class="form-group">
        <span class="col-md-1 control-label text-right">Surname:</span>
        <div class="col-md-3">
            <input name="Guardian-Surname" type="text" class="form-control input-md required" ng-model="newGuardian.Surname" placeholder="Surname">
        </div>
        <span class="col-md-1 control-label text-right">Firstname:</span>
        <div class="col-md-3">
            <input name="Guardian-Firstname" type="text" class="form-control input-md required" ng-model="newGuardian.Firstname" placeholder="Firstname">
        </div>
        <span class="col-md-1 control-label text-right">Nickname:</span>
        <div class="col-md-3">
            <input name="Guardian-Nickname" type="text" class="form-control input-md" ng-model="newGuardian.Nickname" placeholder="Nickname">
        </div>
    </div>
    <div class="form-group">
        <span class="col-md-1 control-label text-right">Email:</span>
        <div class="col-md-3">
            <input name="Guardian-Email" type="text" class="form-control input-md required" ng-model="newGuardian.Email" placeholder="Email">
        </div>
        <span class="col-md-1 control-label text-right">Mobile:</span>
        <div class="col-md-3">
            <input name="Guardian-Mobile" type="text" class="form-control input-md required" ng-model="newGuardian.Mobile" placeholder="Mobile">
        </div>
        <span class="col-md-1 control-label text-right">Telephone:</span>
        <div class="col-md-3">
            <input name="Guardian-OtherTelephone" type="text" class="form-control input-md" ng-model="newGuardian.OtherTelephone" placeholder="Other Telephone">
        </div>
    </div>
    <div class="form-group">
        <span class="col-md-1 control-label text-right">Address:</span>
        <div class="col-md-3">
            <input name="Guardian-Address" type="text" class="form-control input-md required" ng-model="newGuardian.Address" placeholder="Address">
        </div>
        <span class="col-md-1 control-label text-right">Town:</span>
        <div class="col-md-3">
            <input name="Guardian-Town" type="text" class="form-control input-md" ng-model="newGuardian.Town" placeholder="Town">
        </div>
        <span class="col-md-1 control-label text-right">Postcode:</span>
        <div class="col-md-3">
            <input name="Guardian-Nickname" type="text" class="form-control input-md required" ng-model="newGuardian.Postcode" placeholder="Postcode">
        </div>
    </div>
</div>

