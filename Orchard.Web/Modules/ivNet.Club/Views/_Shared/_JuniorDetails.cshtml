<div id="juniorDetails" class="memberDetails">
    
    <div class="form-group col-md-12">
        <span class="col-md-2 control-label text-right">
            Junior: <strong>{{junior.Firstname}} {{junior.Surname}}</strong>
        </span>
        <div class="col-md-2">
            <input type="checkbox" ng-model="junior.MemberIsActive" value="{{junior.MemberIsActive}}" ng-checked="junior.MemberIsActive==1" /> [Active]
        </div>
    </div>

    <div class="form-group col-md-12">
        <span class="col-md-1 control-label text-right">Surname:</span>
        <div class="col-md-2">
            <input type="text" class="form-control input-md required disabled" ng-model="junior.Surname">
        </div>
        <span class="col-md-1 control-label text-right">Firstname:</span>
        <div class="col-md-2">
            <input type="text" class="form-control input-md required disabled" ng-model="junior.Firstname">
        </div>
        <span class="col-md-1 control-label text-right">Nickname:</span>
        <div class="col-md-2">
            <input type="text" class="form-control input-md" ng-model="junior.Nickname" placeholder="Nickname">
        </div>
        <span class="col-md-1 control-label text-right">DOB:</span>
        <div class="col-md-2">
            <input type="date" class="form-control input-md required disabled" value="{{ junior.Dob | date: 'yyyy-MM-dd' }}" />
        </div>
    </div>
    
    <div class="form-group col-md-12">
        <span class="col-md-1 control-label text-right">School:</span>
        <div class="col-md-2">
            <input type="text" class="form-control input-md" ng-model="junior.School">
        </div>
        <span class="col-md-1 control-label text-right">Notes:</span>
        <div class="col-md-5">
            <textarea class="form-control" ng-model="junior.Notes" placeholder=" notes"></textarea>
        </div>      
    </div>
</div>