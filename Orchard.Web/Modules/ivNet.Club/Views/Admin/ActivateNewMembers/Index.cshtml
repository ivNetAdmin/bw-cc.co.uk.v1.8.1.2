@{
    Script.Require("AngularJS-Resource");
    Script.Require("Admin.Member.Activate");

    Style.Require("Admin.Member.Activate");
    Style.Require("trNgGrid");
}

<div id="AdminMemberActivate" data-ng-app="Admin.Member.Activate.App">
    <div data-ng-controller="AdminMemberController">
        <table tr-ng-grid='' items='myItems' enable-filtering="false" enable-sorting="false">
            <thead>
                <tr>
                    <th field-name="MemberId" display-name="Id" display-align="right">
                    </th>
                    <th field-name="Surname" display-name="Surname">
                    </th>
                    <th field-name="Firstname" display-name="Firstname">
                    </th>
                    <th field-name="Dob" display-name="DOB" display-format="dateField:gridItem">
                    </th>
                    <th field-name="AgeGroup" display-name="AgeGroup" display-format="ageGroup:gridItem">
                    </th>
                    <th field-name="RelatedMembeList" display-name="Related" display-format="related:gridItem">
                    </th>
                    <th field-name="IsVetted" display-name="Activate">
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>

                    <td field-name="IsVetted"><input type="checkbox" value="{{gridDisplayItem.IsVetted}}" ng-checked="{{gridDisplayItem.IsVetted}}" /></td>

                    <td>
                        <button class="btn btn-default" ng-click="activateJunior(gridItem)">
                            <span>Save</span>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
